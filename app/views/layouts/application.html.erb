<!DOCTYPE html>
<html>

<head>
  <title>Newscharts</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<header class="row">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Newscharts</a>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', root_path, :class => "active" %></li>
        <li><a href="#">News Statistics</a></li>
      </ul>

<div class="pull-right">
      <%= form_tag( usersearches_search_path, method: "get", class:"navbar-form navbar-left") do %>
        <div class="input-group">
        <%= text_field_tag(:q ,   @keyword , placeholder:"Search" , class:"form-control" ) %>
          <div class="input-group-btn">
        <%= button_tag( 'search' , class:"btn btn-default" , value: 'submit') do %>
              <i class="glyphicon glyphicon-search"></i>
        <% end %>
        </div>
      </div>
      <% end %>


      <div class="btn">
          <%= link_to 'Advanced Search', new_usersearch_path, :class => "btn btn-success" %>
        </div>
    </div>
    </div>
  </nav>
</header>

  <div class="container" >
  <%= yield %>
</div>


</body>

</html>
