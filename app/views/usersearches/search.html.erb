<h1>News</h1>
<% if @results != false && @results["status"] = "OK"  %>

        <p> Search returned <%= @results["totalResults"] %>  results </p>


                <h3>Top News for  <%= @keyword %> Results</h3>

                <%= render partial: 'news/top_stories', locals: { top_headlines: @top } %>

                <h3>Results</h3>
                        <% for i in @results["articles"] do %>
                          <p>
                                  <%= link_to i['url'] do %>
                                    <h5><%= i['title'] %></h5>
                                  <% end %>
                                  <% source = i["source"] %>
                                  <%= source["name"] %><br/>
                                  <%= i["author"] %><br/>
                                  <%= i["content"] %><br/>
                                  <br/>
                              </p>
                        <% end %>

                <% else %>
                        <p>Search error </p>
                <% end %>
