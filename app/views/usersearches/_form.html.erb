

<%= form_with(model: usersearch, local: true) do |f| %>
  <% if usersearch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usersearch.errors.count, "error") %> prohibited this search from being saved:</h2>

      <ul>
      <% usersearch.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form-group">
    <%= f.label :keyword  %><br />
    <%= f.text_field :keyword , placeholder: "Enter Search Term" , :required => true , class: "form-control"%>
  </div>


   <div class="form-group">
     <%= f.label :news_source %><br />
     <%= f.collection_select :news_source, NewsSource.order(:name), :id, :name, include_blank: true , class: "form-control" %>
   </div>

  <div class="form-group">
    <%= f.label :category %><br />
    <%= f.collection_select :category, Category.order(:name), :id, :name, include_blank: true , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :country_id %><br />
    <%= f.collection_select :country, Country.order(:name), :id, :name, include_blank: true  , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :language_id %><br />
    <%= f.collection_select :language, Language.order(:name), :id, :name, include_blank: true  , class: "form-control"%>
  </div>


  <div class="actions"><%= f.submit "Search" , class:"btn btn-primary" %></div>
  <% end %>
