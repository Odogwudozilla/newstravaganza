<div class="row">

  <div class="my-2">
    <h2>Recomended News </h2>
  </div>
  <div class="col-lg-10 col-md-10">

    <%= render partial: 'top_stories', locals: { top_headlines: @top_headlines } %>

    <div class="my-2">

      <h2>Top Searches </h2>
    </div>
    <div class="row">
      <% for i in @top_searches do %>
      <% i["urlToImage"]? image = i["urlToImage"] : image = "newscharts.jpg"  %>
      <div class="col-sm-6 col-lg-3 py-2 h-100 mb-3">
        <div class="card border-success">
          <div class="card-img-top img-fluid">
            <%= image_tag image, alt: "Edit Entry" %>
          </div>
          <div class="card-body">
            <h4 class="card-title">
              <%= link_to (i['url']) do %>
              <%= i['title'] %>
              <% end %>

            </h4>
            <p class="card-text">
              <h6 class="card-title">
                <%= i['title'] %>
              </h6>
              <%= i["author"] %><br />
              <% source = i["source"] %>
              <%= source ? source["name"] : "Unkown" %><br />
              <%= i["content"]? i["content"].split[0..10].join(' '): "Content Unavailable" %><br />

              <p>
                <%= link_to i['url'] , class:"btn btn-primary" do %>
                <span>Read More...</span>
                <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>


  <div class="col-lg-2 col-md-2 col-sm-8">
    <div class="list-group">
      <a href="#" class="list-group-item active">Most Searched Keywords</a>
      <% @top_keywords.each do |s| %>
      <% s.each do |k,v| %>
      <%= link_to usersearches_search_path(q: k), class:"list-group-item " do %>
      <span>
        <%= k %></span>
      <% end %>
      <% end %>
      <% end %>

    </div>
  </div>
</div>