<p id="notice">
  <%= notice %>
</p>

<h1>Countries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country Code</th>
      <th>Continent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
    <tr>
      <td>
        <%= country.name %>
      </td>
      <td>
        <%= country.code %>
      </td>
      <td>
        <%= country.continent.name %>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Country', new_country_path %>